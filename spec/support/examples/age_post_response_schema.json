{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["request", "age"],
  "additionalProperties": false,
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "birthdate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "age": { "type": "integer" }
  }
}